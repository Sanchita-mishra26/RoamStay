<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h3> Listing Details</h3>
    </div>
    <div class="card col-6 offset-2 show-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing img" style="height: 20rem;">
    <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %></b> <br>
            <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
            <%= listing.location %> <br>
            <%= listing.country %>  <br>

        </p>
    </div>
</div>
</div>
<div class="btns">
    <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn"> EDIT </a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button type="submit" class="btn btn-dark offset-2 ">Delete</button>
</form>
</div>

